					::-webkit-input-placeholder
						color #fff
					
					input[type="submit"]
						background-color rgba(0, 169, 255, 0.62)
						border 0
						border-radius(0 4px 4px 0)
						cursor pointer
						color #fff
						font-family 'Lato'
						font-size 1em
						opacity 0
						padding 25px
						position relative
						text-decoration none
						top -6px
						
			.forecast
				color #fff
				font-family 'Lato'
				height 140px
				position relative
				text-shadow 1px 1px 8px rgba(0, 0, 0, 0.48)
				width 100%	

				.day
					box-shadow(1px 0 0 rgba(0, 0, 0, 0.08))
					height 140px
					span(1/5)
						
					
					&:first-child
						background-color rgba(0, 0, 0, 0.11)
						border-radius(0 0 0 5px)
						
					&:last-child
						border-radius(0 0 5px 0)
						box-shadow(0 0 0)
						
					h3, h5
						margin 10px 0
						text-align center
						
					.min_max
						position relative
						text-align center
						
						span
							font-size .8em
						
						h4
							display inline-block
							margin-left 5px
							margin-right 5px
						