// Main File //

	//nib
	@import 'nib'
	
	//jeet
	@import 'jeet'
	
	@keyframes rotate
		0%, 100%
			transform(rotate(0deg))
		
		50%
			transform(rotate(360deg))
			
	body
		font-family 'Lato'
		margin 0
		overflow hidden
		
		.loading
			background-color #fff
			color #00a9ff
			height 100%
			position fixed
			width 100%
			z-index 9999
			
			&:before
				align(both)
				content 'loading.'
				
			&:after
				animation-name rotate
				animation-duration 2s
				animation-iteration-count infinite
				border 1px solid #eee	
				border-radius(50%)
				box-shadow(0 -1px 0 0 #00a9ff)
				content ' '
				height 200px
				left 50%
				margin-left -100px
				margin-top -100px
				position absolute
				text-align center
				top 50%
				width @height
		
		.mc-image
			background-size 120%
			display block
			height 100%
			left 0px
			opacity(0.8)
			position fixed
			transform(scale(1.5))
			top 0px 
			width 100%
			-webkit-filter blur(10px)
				
		.content
			align(both)
			background-color rgba(255, 255, 255, 0.28)
			border-radius(5px)
			box-shadow(0 5px 35px rgba(0, 0, 0, 0.60))
			height 500px
			width 850px
			
			.image
				background-size 100%
				border-radius(5px 5px 0 0)
				height 360px
				width 100%
				
				.input
					display table
					position absolute
					
					input[type="text"]
						background url()
						border 0						
						color #fff
						font-family 'Lato'
						font-size 3em
						font-weight bold
						text-shadow 1px 1px 5px rgba(0, 0, 0, 0.28)
						margin 30px
						margin-right -3px
						padding 15px
						outline none
						transition(.4s ease)
						
						&:focus
							background-color rgba(0, 0, 0, 0.3)
							border-radius(4px 0 0 4px)
							font-size 2em
							
							~ input[type="submit"]
								opacity 1
								
